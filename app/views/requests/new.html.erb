<h1>依頼を投稿する</h1>
<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @request, local: true) do |f| %>
    　<%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :money, '金額' %>
        <%= f.text_field :money, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.select :online_or_offline, [["オンライン", "0"], ["オフライン", "1"]], :prompt => "選択してください" %>
      </div>
      
      <div class="form-group">
        <%= f.label :prefecture, '県・市区' %>
        <%= f.text_field :prefecture, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :station, '最寄り駅' %>
        <%= f.text_field :station, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      <div style="margin-buttom: 10px;">　</div>
    <% end %>
  </div>
</div>